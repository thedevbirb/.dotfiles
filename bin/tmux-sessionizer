#!/usr/bin/env bash

# ThePrimeagen version
if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected=$( (
    find ~ ~/nixos-config -mindepth 0 -maxdepth 0 -type d
    find ~/personal ~/oss ~/.dotfiles ~/Documents -mindepth 0 -maxdepth 1 -type d
    find ~/Documents/obsidian -mindepth 0 -maxdepth 1 -type d

    find ~/personal/idris ~/personal/lean ~/personal/c -mindepth 1 -maxdepth 1 -type d
    find ~/work -mindepth 0 -maxdepth 2 -type d
    find ~/work/cb/tplus-core_tpluslabs -mindepth 0 -maxdepth 1 -type d
  ) | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

# Check if selected directory is a git worktree
if [[ -f "$selected/.git" ]]; then
  # It's a worktree - .git is a file pointing to the main repo
  parent_name=$(basename "$(dirname "$selected")")
  branch_name=$(git -C "$selected" rev-parse --abbrev-ref HEAD 2>/dev/null)
  if [[ -n $branch_name ]]; then
    selected_name=$(echo "${parent_name}__${branch_name}" | tr . _)
  else
    selected_name=$(basename "$selected" | tr . _)
  fi
else
  selected_name=$(basename "$selected" | tr . _)
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s "$selected_name" -c "$selected"
  exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
  tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name"

# # call `session` the command that finds in such folders the first level
# # of directories and pipe them to fzf
# session=$(find ~ ~/personal ~/work -mindepth 1 -maxdepth 1 -type -d | fzf)
#
# # basename prints its argument with any leader directory removed
# # pipe the result to `tr` which swaps dots into underscores
# session_name=$(basename "$session" | tr . _)
#
# if ! tmux has-session -t "$session_name" 2> /dev/null; then
#   tmux new-session -d "$session_name" -c "$session" -d
# fi
#
# tmux switch-client -t "$session_name"
